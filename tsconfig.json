{
  "compilerOptions": {
    "target": "es2020",          // Slightly more recent target (optional)
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "outDir": "./build",
    "lib": ["es2020"]            // Match the target
  },
  "include": ["src/**/*"],          // Explicitly include source files
  "exclude": ["node_modules"]       // Explicitly exclude node_modules
}
